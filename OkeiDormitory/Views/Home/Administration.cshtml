@model OkeiDormitory.Models.ViewModels.AdministrationViewModel;
@{
    ViewData["Title"] = "Администрирование";
    Layout = "_Layout";
}

<div class="administration">
    <div class="users-info">
        <div class="user-list-header">Список пользователей</div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Логин</th>
                    <th>Роль</th>
                    <th>ФИО</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Login</td>
                        <td>@user.Role.Name</td>
                        <td>@user.FullName</td>
                        <td><button>✔</button></td>
                        <td><button>✏</button></td>
                        <td><button>❌</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/administration.js"></script>
}